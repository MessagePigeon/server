generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RegisterCode {
  id Int @id @default(autoincrement())

  code String @unique
}

model Teacher {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  username String @unique
  name     String
  password String

  students       Student[]
  studentRemarks StudentRemark[]

  messages Message[]
}

model Student {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  key           String @unique
  defaultRemark String

  teachers       Teacher[]
  studentRemarks StudentRemark[]

  messages Message[]
}

model StudentRemark {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  remark String

  teacher   Teacher @relation(fields: [teacherId], references: [id])
  student   Student @relation(fields: [studentId], references: [id])
  teacherId String
  studentId String

  @@unique([teacherId, studentId])
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  message String

  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId String

  students Student[]
}
